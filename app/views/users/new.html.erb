<div id="signup">
<%= form_for(@user) do |f| %>
  <%= render 'shared/error_messages' %>
  <table>
    <tr><th><%= f.label :name %></th><td><%= f.text_field :name %></td></tr>
    <tr><th><%= f.label :email %></th><td><%= f.text_field :email %></td></tr>
    <tr><th><%= f.label :password %></th><td><%= f.password_field :password %></td></tr>
    <tr><th><%= f.label :password_confirmation, "Confirmation" %></th><td>
  <%= f.password_field :password_confirmation %></td></tr>
    <tr><th></th><td><%= f.submit "Sign Up", :class => "btn_mid btn_green"  %></td></tr>
</table>
<% end%>
</div>
