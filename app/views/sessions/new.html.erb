<div id="signup">
  <h3>サインイン</h3>
<%= form_for(:session, url: sessions_path) do |f| %>
<table>
<tr>
<th><%= f.label :email %></th>
<td><%= f.text_field :email %></td></tr>
<tr><th><%= f.label :password %></th>
<td><%= f.password_field :password %></td></tr>
<tr><td></td><td><%= f.submit "Sign in", class: "btn btn-large btn-primary" %></td></tr>
</table>
<% end %>

<p>New user? <%= link_to "Sign up now!", signup_path %></p>
</div>